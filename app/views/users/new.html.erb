<% provide :title, t("home.signup") %>
<h1><%= t"home.signup" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
    <%= render "shared/error_messages" %>
    <%= f.label :name, t("new.name") %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password, t("new.password") %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation, t("new.confirmation") %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit t("new.create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
