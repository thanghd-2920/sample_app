<header class="navbar navbar-fixed-top navbar-
inverse">
<div class="container">
  <%= link_to "sample app", "#", id: "logo" %>
  <nav class="bg-dark">
    <ul class="nav navbar-nav navbar-right bg-dark">
      <li><%= link_to_unless_current "English", locale:"en" %></li>
      <li><%= link_to_unless_current "Vietnamese", locale:"vn" %></li>
      <li><%= link_to t("nav.home"), home_path,class:"nav-link" %>
      </li>
      <% if logged_in? %>
      <li><%= link_to t("nav.user"), "#" %></li>
      <li><%= link_to t("nav.users"), users_path %></li>
      <li class="dropdown">
        <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
        <%= t "user.account" %><b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <li><%= link_to t("user.profile"), current_user %></li>
          <li><%= link_to t("user.setting"), edit_user_path(current_user) %></li>
          <li class="divider"></li>
          <li>
            <%= link_to t("user.logout"), logout_path, method: :delete %>
          </li>
        </ul>
      </li>
      <% else %>
      <li><%= link_to t("nav.login"), login_path %></li>
      <% end %>
      <li><%= link_to t("nav.help"), help_path,class:"nav-link" %>
      </li>
    </ul>
  </nav>
</div>
</header>
